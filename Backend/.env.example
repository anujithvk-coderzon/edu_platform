# Environment
NODE_ENV=development

# Server Configuration
PORT=4000
LOCAL_BASE_URL=http://localhost:4000

# Storage Configuration
# Set to 'true' to use local storage instead of Bunny CDN (for development)
USE_LOCAL_STORAGE=false

# Bunny CDN Configuration (for production or when USE_LOCAL_STORAGE=false)
BUNNY_API_KEY=your_bunny_api_key_here
BUNNY_STORAGE_ZONE=your_storage_zone_here
BUNNY_PULL_ZONE_HOST=your-pull-zone-host.b-cdn.net

# Database
DATABASE_URL=your_database_url_here

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Email (if using email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password